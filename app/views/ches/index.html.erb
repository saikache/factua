<h1>Listing ches</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ches.each do |ch| %>
      <tr>
        <td><%= ch.content %></td>
        <td><%= link_to 'Show', ch %></td>
        <td><%= link_to 'Edit', edit_ch_path(ch) %></td>
        <td><%= link_to 'Destroy', ch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

